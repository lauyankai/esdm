<mvc:View controllerName="projectesdm.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <content>
            <VBox class="sapUiMediumMargin">
                <Text text="Welcome to the Academic Advising System. Select a module below:" class="sapUiSmallMarginBottom"/>
                
                    <Title text="Student View" level="H3" class="sapUiMediumMarginTop"/>
                    <HBox class="sapUiSmallMarginTop sapUiMediumMarginBottom">
                    <Button 
                        text="Academic Progress Dashboard" 
                        type="Emphasized" 
                        press=".onNavigateToAcademicProgress"
                        icon="sap-icon://learning-assistant"
                        class="sapUiSmallMarginEnd"/>
                    </HBox>
                
                    <Title text="Advisor View" level="H3" class="sapUiSmallMarginTop"/>
                    <HBox class="sapUiSmallMarginTop sapUiMediumMarginBottom">
                        <Button 
                            text="Advisor Dashboard" 
                            type="Emphasized" 
                            press=".onNavigateToAdvisorDashboard"
                            icon="sap-icon://group"
                            class="sapUiSmallMarginEnd"/>
                    
                    <Button 
                        text="Advising Notes" 
                        type="Default" 
                        icon="sap-icon://notes"
                        enabled="false"
                        class="sapUiSmallMarginEnd"/>
                    
                    <Button 
                        text="Early Warning Alerts" 
                        type="Default" 
                        icon="sap-icon://warning"
                        enabled="false"
                        class="sapUiSmallMarginEnd"/>
                </HBox>

                <Title text="Admin View" level="H3" class="sapUiSmallMarginTop"/>
                <HBox class="sapUiSmallMarginTop sapUiMediumMarginBottom">
                    <Button 
                        text="Administration Dashboard" 
                        type="Emphasized" 
                        press=".onNavigateToAdminDashboard"
                        icon="sap-icon://manager"
                        class="sapUiSmallMarginEnd"/>
                    
                    <Button 
                        text="User Management" 
                        type="Default" 
                        icon="sap-icon://employee"
                        enabled="false"
                        class="sapUiSmallMarginEnd"/>
                    
                    <Button 
                        text="System Settings" 
                        type="Default" 
                        icon="sap-icon://action-settings"
                        enabled="false"
                        class="sapUiSmallMarginEnd"/>
                </HBox>
            </VBox>
        </content>
    </Page>
</mvc:View>